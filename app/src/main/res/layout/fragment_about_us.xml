<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs"
    android:id="@+id/aboutUsFrameLayout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/color_note"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:id="@+id/aboutUsImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notepad"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:id="@+id/aboutUsText2"
            android:layout_marginTop="15dp"
            android:layout_below="@id/aboutUsImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: 1.0"
            android:textColor="#80000000"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:id="@+id/aboutUsText3"
            android:layout_marginTop="5dp"
            android:layout_below="@id/aboutUsText2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author_name"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:id="@+id/aboutUsText4"
            android:layout_marginTop="15dp"
            android:layout_below="@id/aboutUsText3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author_email"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:id="@+id/aboutUsText5"
            android:layout_marginTop="5dp"
            android:layout_below="@id/aboutUsText4"
            android:textIsSelectable="true"
            android:focusable="true" />

    </RelativeLayout>

</FrameLayout>