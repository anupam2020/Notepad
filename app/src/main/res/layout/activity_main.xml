<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sbdev.notepad_project.MainActivity"
    android:id="@+id/mainRelative">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notepad"
        android:layout_marginTop="50dp"
        android:textSize="40dp"
        android:fontFamily="@font/aladin"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"
        android:id="@+id/mainText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your memories !"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/mainSubText"
        android:textColor="#BF000000"
        android:layout_below="@id/mainText"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:lottie_fileName="31548-robot-says-hello.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:id="@+id/mainLottie"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/button_bg_blue"
            android:text="SIGN IN"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:id="@+id/mainSignInButton"
            android:layout_gravity="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/blue_border"
            android:layout_marginTop="15dp"
            android:text="SIGN UP"
            android:textSize="18dp"
            android:textColor="@color/light_blue"
            android:id="@+id/mainSignUpButton"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>