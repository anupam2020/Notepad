<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sbdev.notepad_project.AboutUsActivity"
    android:id="@+id/aboutUsRelative">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/aboutUsSubRelative"
        android:background="@drawable/blue_bg_corner_radius">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/aboutUsBack"
            app:tint="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="About Us"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/aboutUsTopText"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/color_note"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/aboutUsImage"
        android:layout_below="@id/aboutUsSubRelative"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notepad"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:id="@+id/aboutUsText2"
        android:layout_marginTop="15dp"
        android:layout_below="@id/aboutUsImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version: 1.4"
        android:textColor="#80000000"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:id="@+id/aboutUsText3"
        android:layout_marginTop="5dp"
        android:layout_below="@id/aboutUsText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_name"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:id="@+id/aboutUsText4"
        android:layout_marginTop="15dp"
        android:layout_below="@id/aboutUsText3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_email"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:id="@+id/aboutUsText5"
        android:layout_marginTop="5dp"
        android:layout_below="@id/aboutUsText4"
        android:textIsSelectable="true"
        android:focusable="true" />

</RelativeLayout>