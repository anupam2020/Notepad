<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/favItemNotesRelative"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes Title"
                android:id="@+id/favItemTitle"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:singleLine="true"
                android:layout_toLeftOf="@id/favItemLinear"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/favItemLinear"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:tint="#BF000000"
                    android:src="@drawable/ic_baseline_more_vert_24"
                    android:id="@+id/favItemMore"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_bookmark_border_24_black"
                    android:id="@+id/favItemStar"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 Aug 12:31 PM"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="12dp"
                android:id="@+id/favTextDateTime"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>