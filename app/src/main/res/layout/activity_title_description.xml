<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Title_Description"
    android:id="@+id/titleDesMainRelative">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeTD"
        android:background="@drawable/blue_bg_corner_radius">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/backTD"
            app:tint="@color/black"/>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_delete_outline_24"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:id="@+id/deleteNoteTD"
            app:tint="@color/black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_outline_share_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/shareNoteTD"
            android:layout_toLeftOf="@id/deleteNoteTD"
            app:tint="@color/black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_outline_edit_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/editNoteTD"
            android:layout_toLeftOf="@id/shareNoteTD"
            app:tint="@color/black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_volume_up_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/speakNoteTD"
            android:layout_toLeftOf="@id/editNoteTD"
            app:tint="@color/black"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/notesTitleTD"
        android:layout_below="@id/relativeTD"
        android:textIsSelectable="true"/>

    <TableRow
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_black"
        android:layout_below="@id/notesTitleTD"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/notesDescriptionTD"
        android:textSize="20dp"
        android:textColor="@color/very_light_black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/notesTitleTD"
        android:textIsSelectable="true"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerViewTD"
        android:layout_below="@+id/notesDescriptionTD"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="15dp"
        android:scrollbars="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>