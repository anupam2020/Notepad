<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notepad_project">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notepad">
        <activity
            android:name=".PrivacyPolicyActivity"
            android:exported="false" />
        <activity
            android:name=".TermsConditionsActivity"
            android:exported="false" />
        <activity
            android:name=".AboutUsActivity"
            android:exported="false" />
        <activity
            android:name=".FacebookActivity"
            android:exported="true" />
        <activity
            android:name=".AddNotesActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/BlackBox"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".TwitterActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/BlackBox"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".Title_Description"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/BlackBox"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".EditNotes"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/BlackBox"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".NotesActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/NotesThemeLight"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/BlackBox"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/BlackBox"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <service
            android:name=".PushNotificationService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>