<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sbdev.notepad_project">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notepad">
        <activity
            android:name="com.sbdev.notepad_project.PrivacyPolicyActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.sbdev.notepad_project.TermsConditionsActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.sbdev.notepad_project.AboutUsActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.sbdev.notepad_project.FacebookActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name="com.sbdev.notepad_project.AddNotesActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/BlackBox"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name="com.sbdev.notepad_project.TwitterActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/BlackBox"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name="com.sbdev.notepad_project.Title_Description"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/BlackBox"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name="com.sbdev.notepad_project.EditNotes"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/BlackBox"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name="com.sbdev.notepad_project.NotesActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/NotesThemeLight"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name="com.sbdev.notepad_project.RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/BlackBox"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name="com.sbdev.notepad_project.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name="com.sbdev.notepad_project.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/BlackBox"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name="com.sbdev.notepad_project.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <service
            android:name="com.sbdev.notepad_project.PushNotificationService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>